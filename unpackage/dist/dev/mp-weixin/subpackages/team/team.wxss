.container {
  padding: 50rpx 35rpx;
}
.section-people {
  padding: 50rpx 80rpx;
  background-color: rgba(8, 8, 20, 0.2);
  border: 40rpx solid #D8B57F;
  border-radius: 5px;
  position: relative;
}
.section-people::after {
  position: absolute;
  content: '';
  background-color: #62626a;
  width: 1px;
  height: 40%;
  left: 50%;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.section-people .item {
  color: #fff;
}
.section-people .item .title {
  color: #808086;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  font-family: AlibabaPuHuiTi_2_65_Medium;
}
.section-people .item .number {
  font-size: 38rpx;
}
.section-details {
  margin-top: 60rpx;
}
.section-details > .title {
  margin-bottom: 40rpx;
  color: #D8B57F;
  font-size: 36rpx;
  font-family: AlibabaPuHuiTi_2_65_Medium;
}
.section-details .content {
  padding: 50rpx;
  background-color: rgba(57, 50, 52, 0.6);
  border: 1px dashed #D8B57F;
  border-radius: 5px;
}
.section-details .content .item {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #6c6868;
}
.section-details .content .item:last-child {
  margin: 0;
}
.section-details .content .column {
  flex: 1;
}
.section-details .content .title {
  color: #817d7d;
  margin-bottom: 10rpx;
}
.section-details .content .number {
  color: #fff;
  font-size: 30rpx;
}

