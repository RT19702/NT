.section-swiper {
  margin-top: 45rpx;
  height: 350rpx;
}
.section-swiper .swiper-item {
  padding: 40rpx;
  width: 80%;
  border-radius: 6px 6px 0px 0px;
  margin: 0 auto;
  color: #fff;
  position: relative;
}
.section-swiper .swiper-item .info {
  background-color: #debf92;
  padding: 5rpx 10rpx;
  border-radius: 50px;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  color: #575153;
  font-family: AlibabaPuHuiTi_2_65_Medium;
}
.section-swiper .swiper-item .info .money {
  margin-left: 10rpx;
}
.section-swiper .swiper-item .usable {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.section-swiper .swiper-item .balance {
  font-size: 60rpx;
  margin-bottom: 40rpx;
}
.section-swiper .swiper-item .number {
  margin-left: 10rpx;
  font-size: 40rpx;
}
.section-swiper .first {
  background: linear-gradient(to right, #DBC395, #D7AE73);
}
.section-swiper .second {
  background: linear-gradient(to right, #c67e1b, #DBC395);
}
.section-icon {
  margin-top: 40rpx;
}
.section-icon .title {
  margin-top: 20rpx;
  text-align: center;
  color: #fff;
}
.section-list {
  margin-top: 30rpx;
  padding: 30rpx;
}
.section-list > .title {
  color: #807f83;
  font-size: 35rpx;
  margin-bottom: 40rpx;
  font-family: AlibabaPuHuiTi_2_65_Medium;
}
.section-list > .title .item {
  margin-right: 40rpx;
}
.section-list > .title .item:last-child {
  margin: 0;
}
.section-list > .title .current {
  color: #D8B57F;
}
.section-list .content {
  background-color: #342e2f;
  padding: 36rpx 28rpx;
  border: 1px dashed #D8B57F;
  border-radius: 5px;
}

