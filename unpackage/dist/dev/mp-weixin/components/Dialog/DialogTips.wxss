.dialog-content {
  position: fixed;
  z-index: 1001;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.dialog-content .dialog-bg-box {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #464a4f;
  padding: 40rpx;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 70vw;
  color: #fff;
  text-align: center;
}
.dialog-content .dialog-bg-box .title {
  font-size: 38rpx;
  font-family: AlibabaPuHuiTi_2_55_Regular;
}
.dialog-content .dialog-bg-box .code-qr {
  margin: 50rpx auto;
  width: 380rpx;
  height: 380rpx;
  background: #696A6C;
}
.dialog-content .dialog-bg-box .button {
  width: 200rpx;
  margin: 0 auto;
}

